{
  "name": "visions-konnectors",
  "private": true,
  "version": "0.0.1",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git@github.com:konnectors/template.git"
  },
  "keywords": [],
  "author": "",
  "license": "AGPL-3.0",
  "dependencies": {
    "cozy-konnector-libs": "4.44.0",
    "jsrsasign": "10.4.0",
    "babel-preset-env": "1.7.0"
  },
  "scripts": {
    "test": "env BANK_VENDOR=${BANK_VENDOR:-bi} jest",
    "dev": "env BANK_VENDOR=${BANK_VENDOR:-bi} LOG_LEVEL=${LOG_LEVEL:-info} cozy-konnector-dev --create-account src/index.js",
    "dev-transfer": "env BANK_VENDOR=${BANK_VENDOR:-bi} LOG_LEVEL=${LOG_LEVEL:-info} KONNECTOR_OPTIONS=\"$(jq -rc '. * {mode: \"transfer\"}' transfer.json)\" cozy-konnector-dev src/index.js",
    "standalone": "cozy-run-standalone src/index.js",
    "bi": "NODE_ENV=development node src/bi/cli.js",
    "linxo": "node src/linxo/cli/index.js",
    "build": "yarn run build:bi",
    "build:bi": "env BANK_VENDOR=bi webpack",
    "build:linxo": "env BANK_VENDOR=linxo webpack",
    "build:nestor": "env BANK_VENDOR=nestor webpack",
    "clean": "rm -rf ./build",
    "watch": "yarn build --watch",
    "prebuild": "npm run clean",
    "lint": "eslint src scripts",
    "prepush": "yarn lint",
    "doc": "jsdoc2md --template jsdoc2md/README.hbs src/**/*.js > README.md",
    "cozyPublish": "./scripts/publish/publish.js",
    "createCozyApp": "./scripts/createApp.js",
    "sentry:sourcemaps": "sentry-cli --url https://sentry.cozycloud.cc/ releases --org sentry --project linxo files $(git rev-parse --short HEAD) upload-sourcemaps ./build",
    "optimize-icons": "svgo --enable inlineStyles --config '{\"full\": true, \"plugins\": [{\"inlineStyles\": {\"onlyMatchedOnce\": false}}]}' src/publish/icons/*.svg",
    "logs": "./scripts/follow-local-logs.sh",
    "update-local-token": "./scripts/update-local-bi-token-from-logged-user.sh"
  },
  "devDependencies": {
    "@sentry/cli": "^1.35.1",
    "argparse": "^1.0.10",
    "babel-cli": "6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "copy-webpack-plugin": "^4.0.1",
    "cozy-app-publish": "0.16.0",
    "cozy-jobs-cli": "1.16.2",
    "cozy-konnector-build": "1.2.2",
    "eslint-config-cozy-app": "^0.8.0",
    "fs-extra": "5.0.0",
    "git-directory-deploy": "^1.5.1",
    "husky": "^0.14.3",
    "inquirer": "^6.3.1",
    "jest": "^23.5.0",
    "jsdoc-to-markdown": "^4.0.1",
    "jsdom": "^13.0.0",
    "request-debug": "^0.2.0",
    "request-promise": "^4.2.2",
    "semver": "5.5.0",
    "showdown": "^1.9.0",
    "standard": "^11.0.0",
    "svgo": "1.0.5",
    "tar": "4.4.1",
    "webpack": "^4.44.2",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2"
  },
  "jest": {
    "verbose": true,
    "rootDir": "src",
    "testEnvironment": "node"
  }
}

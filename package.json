{
  "name": "cozy-konnector-template",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konnectors/cozy-konnector-template.git"
  },
  "keywords": [],
  "author": "Cozy Cloud",
  "license": "AGPL-3.0",
  "main": "./src/index.js",
  "eslintConfig": {
    "extends": [
      "eslint-config-cozy-app"
    ]
  },
  "eslintIgnore": [
    "build"
  ],
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "cozy-run-dev",
    "standalone": "cozy-run-standalone",
    "test": "konitor testit .",
    "check": "konitor check .",
    "build": "webpack",
    "precommit": "yarn lint",
    "lint": "eslint --fix .",
    "deploy": "git-directory-deploy --directory build/ --branch ${DEPLOY_BRANCH:-build} --repo=${DEPLOY_REPOSITORY:-https://$GITHUB_TOKEN@github.com/konnectors/cozy-konnector-template.git}",
    "cozyPublish": "cozy-app-publish --token $REGISTRY_TOKEN --build-commit $(git rev-parse ${DEPLOY_BRANCH:-build})"
  },
  "dependencies": {
    "cozy-konnector-libs": "4.1.9"
  },
  "devDependencies": {
    "copy-webpack-plugin": "4.5.1",
    "cozy-app-publish": "0.3.6",
    "cozy-jobs-cli": "1.0.18",
    "eslint": "4.19.1",
    "eslint-config-cozy-app": "0.5.1",
    "git-directory-deploy": "1.5.1",
    "husky": "0.14.3",
    "konitor": "0.8.2",
    "webpack": "4.7.0",
    "webpack-cli": "2.1.3"
  }
}

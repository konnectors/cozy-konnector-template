{
  "name": "cozy-konnector-template",
  "version": "1.0.0",
  "description": "",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/konnectors/cozy-konnector-template.git"
  },
  "keywords": [],
  "author": "Cozy Cloud",
  "license": "AGPL-3.0",
  "main": "./src/index.js",
  "eslintConfig": {
    "extends": [
      "cozy-app"
    ]
  },
  "eslintIgnore": [
    "build"
  ],
  "scripts": {
    "start": "node ./src/index.js",
    "dev": "cozy-run-dev",
    "standalone": "cozy-run-standalone",
    "pretest": "npm run clean",
    "test": "konitor testit .",
    "check": "konitor check .",
    "clean": "rm -rf ./data",
    "build": "webpack",
    "precommit": "yarn lint",
    "lint": "eslint --fix .",
    "deploy": "git-directory-deploy --directory build/ --branch ${DEPLOY_BRANCH:-build} --repo=${DEPLOY_REPOSITORY:-https://$GITHUB_TOKEN@github.com/konnectors/cozy-konnector-template.git}",
    "cozyPublish": "cozy-app-publish --token $REGISTRY_TOKEN --build-commit $(git rev-parse ${DEPLOY_BRANCH:-build})",
    "travisDeployKey": "./bin/generate_travis_deploy_key"
  },
  "dependencies": {
    "cozy-konnector-libs": "4.12.1"
  },
  "devDependencies": {
    "copy-webpack-plugin": "4.6.0",
    "cozy-app-publish": "0.9.1",
    "cozy-jobs-cli": "1.6.1",
    "eslint": "5.10.0",
    "eslint-config-cozy-app": "1.1.5",
    "eslint-plugin-prettier": "^3.0.0",
    "git-directory-deploy": "1.5.1",
    "husky": "1.2.1",
    "konitor": "0.10.1",
    "svgo": "1.1.1",
    "webpack": "4.27.1",
    "webpack-cli": "3.1.2"
  }
}
